<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="141dp"
    android:layout_gravity="left"
    android:layout_marginBottom="16dp"

    android:background="@drawable/one_time_booking_bg"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/booking_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subcribed date:"
            android:textColor="#9C9DA5"
            android:textSize="10sp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvSubscribedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppins"
            android:text="April 26,2023"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/booking_id"
            app:layout_constraintTop_toTopOf="parent" />

<!--        <LinearLayout-->
<!--            android:id="@+id/linearLayout_status"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="22dp"-->
<!--            android:background="@drawable/booking_paid"-->
<!--            android:orientation="vertical"-->
<!--            android:gravity="center_vertical"-->
<!--            android:paddingLeft="10dp"-->
<!--            android:paddingRight="10dp"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent">-->
            <TextView
                android:id="@+id/sub_status"
                android:textColor="#26A34D"
                android:fontFamily="@font/poppins"
                android:textSize="8sp"
                android:background="@drawable/booking_paid"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Active"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
<!--        </LinearLayout>-->


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/subscriptionimg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:elevation="4dp"
            android:src="@drawable/img"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/SoftCorner"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/subscription_venue"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Swimming Pool"
                android:layout_marginBottom="5dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:src="@drawable/location" />
                <TextView
                    android:id="@+id/sub_location"
                    android:textColor="#707070"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Beside Block D"
                    />


            </LinearLayout>




        </LinearLayout>


    </LinearLayout>



</LinearLayout>