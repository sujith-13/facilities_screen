<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_booking_card"
    android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/booking_id"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Booking ID: 22378965"

                />
            <TextView
                android:id="@+id/avail_date"
                android:textColor="#B0B0B0"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Availed Date: April 26, 2023, 10:00 AM - 03:00 PM"
                />

            <TextView
                android:id="@+id/booking_type"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Meeting Room"
                />
            <TextView
                android:id="@+id/textView3"
                android:textColor="#707070"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textFontWeight="350"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Payment Details"
                />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="89dp"
                   android:layout_height="22dp"
                   android:gravity="center"
                   android:layout_marginRight="8dp"
                   android:background="@drawable/yello_rupee"
                   android:orientation="horizontal">
                   <TextView
                       android:id="@+id/textView4"
                       android:textColor="#FB8800"
                       android:textSize="12sp"
                       android:textStyle="bold"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:text="â‚¹"
                       android:layout_marginLeft="8dp"
                       android:layout_marginRight="6dp"
                       android:layout_margin="2dp"
                       />
                   <TextView
                       android:id="@+id/paymet_amount"
                       android:textColor="#FB8800"
                       android:textSize="12sp"
                       android:textStyle="bold"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:text="5,000.00"
                       android:layout_marginRight="8dp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="22dp"
                   android:gravity="center"
                   android:paddingRight="8dp"
                   android:paddingLeft="8dp"
                   android:layout_marginRight="8dp"
                   android:background="@drawable/blue_date"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/imageView"
                       android:layout_marginLeft="8dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/dates"
                       android:layout_marginRight="5dp"/>
                   <TextView
                       android:id="@+id/payment_date"
                       android:textColor="#1794C5"
                       android:textSize="12sp"
                       android:textStyle="bold"
                       android:layout_marginRight="5dp"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:text="27/03/2024"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="22dp"
                   android:gravity="center"
                   android:paddingRight="8dp"
                   android:paddingLeft="8dp"
                   android:background="@drawable/purple_money"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/payment"

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/money_transfer"
                       android:layout_marginRight="5dp"/>
                   <TextView
                       android:id="@+id/payment_method"
                       android:textColor="#7940BC"
                       android:textSize="12sp"
                       android:textStyle="bold"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:text="Net Banking"
                       />
               </LinearLayout>

           </LinearLayout>
            <TextView
                android:id="@+id/view_receipt"
                android:textColor="#29ADB2"
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="View Receipt"
                />
        </LinearLayout>




</androidx.cardview.widget.CardView>