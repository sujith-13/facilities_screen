<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginBottom="25dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/reschedule_warning_tv"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Booking cannot be cancelled before 6 hours of the slot timings "
            android:layout_marginTop="24dp"
            />
        <TextView
            android:textColor="#707070"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:text="For more information, Please contact Admin"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_weight="1"
                android:src="@drawable/icon_time" />
            <TextView
                android:id="@+id/admin_available_time"
                android:textColor="#B0B0B0"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="09:00am - 06:00pm , Mon-Fri"
                />


        </LinearLayout>
        <Button
            android:id="@+id/call_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/button_reschedule"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/phone_broken"
            android:text="+91 78986 74532" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>